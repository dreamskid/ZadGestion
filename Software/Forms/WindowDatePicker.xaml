<Window x:Class="Software.WindowDatePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software"
        mc:Ignorable="d"
        Title="WindowDatePicker" Height="183.021" Width="332.051" VerticalAlignment="Top" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid>
        <!--Date picker-->
        <DatePicker x:Name="Dtp_EndDatePicker" Margin="10,108,10,0" VerticalAlignment="Top" CalendarClosed="Dtp_EndDatePicker_CalendarClosed" Keyboard.PreviewKeyUp="Dtp_EndDatePicker_PreviewKeyUp" TabIndex="2"/>
        <DatePicker x:Name="Dtp_FirstDatePicker" Margin="10,45,10,0" VerticalAlignment="Top" TabIndex="1"/>

        <!--Label-->
        <Label x:Name="Lbl_FirstDateExplanation" Content="FirstDateExplanation" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" VerticalAlignment="Top" Width="184"/>
        <Label x:Name="Lbl_EndDateExplanation" Content="EndDateExplanation" HorizontalAlignment="Left" Height="29" Margin="10,74,0,0" VerticalAlignment="Top" Width="184"/>
    </Grid>
</Window>
